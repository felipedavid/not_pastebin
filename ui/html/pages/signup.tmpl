{{define "title"}}Sign up{{end}}

{{define "main"}}
    <form method="POST" action="/user/signup">
        <div class="form-group">
            <label for="input_name">Name:</label>
            {{with .Form.FieldErrors.name}}
                <label class="alert alert-danger">{{.}}</label>
            {{end}}
            <input name="name" type="text" class="form-control" id="input_name" placeholder="Enter username" value="{{.Form.Name}}">
        </div>
        <div class="form-group">
            <label for="input_email">Email:</label>
            {{with .Form.FieldErrors.email}}
                <label class="alert alert-danger">{{.}}</label>
            {{end}}
            <input name="email" type="email" class="form-control" id="input_email" placeholder="Enter email" value="{{.Form.Email}}">
        </div>
        <div class="form-group">
            <label for="input_password">Password:</label>
            {{with .Form.FieldErrors.password}}
                <label class="alert alert-danger">{{.}}</label>
            {{end}}
            <input name="password" type="password" class="form-control" id="input_password" placeholder="Enter password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{{end}}